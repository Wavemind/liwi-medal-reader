{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "__DEV__": false,
    "fetch": false,
    "navigator": false
  },
  "extends": ["airbnb", "plugin:react/recommended", "eslint:recommended", "plugin:flowtype/recommended", "plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": ["react", "flowtype", "detox"],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-filename-extension": 0,
    "import/prefer-default-export": 0,
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "react/display-name": 0,
    "react/sort-comp": 0,
    "import/no-cycle": [2, { "maxDepth": 1 }],
    "react/prop-types": 0,
    "template-curly-spacing": "off",
    "indent": "off",
    "max-len": "off",
    "arrow-parens": "off",
    "arrow-body-style": ["off"],
    "global-require": "off"
  }
}

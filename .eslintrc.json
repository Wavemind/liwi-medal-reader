{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["airbnb"],
  "plugins": ["react", "jsx-a11y", "import"],
  "env": {
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "rules": {
    "react/forbid-prop-types": [0],
    "jsx-a11y/anchor-is-valid": [0],
    "function-paren-newline": [2, "consistent"],
    "react/prefer-stateless-function": [2, { "ignorePureComponents": true }],
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
    "import/no-extraneous-dependencies": [2, { "devDependencies": ["__tests__/**"] }],
    "quotes": [2, "single"],
    "max-len": 0
  }
}
